@import '/app.wxss';
/**overlay**/
.mui-act-overlay{
    width:100%;
    height: 100%;
    position: fixed;
    z-index: 120;
    left:0;top:0;
    /* padding-bottom:80rpx; */
   
  }
  .mui-act-overlay .overlay-mask{
    width: 100%;height:100%;
    background-color:#000;
    opacity: .2;
    position: absolute;
    left:0;top:0;
    z-index: 121;
  }
  .mui-act-overlay .act-overlay-main{
    width:100%;
    /* height: 50%; */
    background: #fff;
    position: absolute;
    left:0;bottom:-100%;
    z-index: 122;
    border-radius: 20rpx 20rpx 0 0;
    /* padding-bottom:80rpx; */
  }
  .mui-act-overlay .act-overlay-close{
    position: absolute;
    width:40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 40rpx;
    color:#ddd;
    right:10rpx;
    top:10rpx;
    border:1rpx solid #ddd;
    font-size: 24rpx;
  }
  .mui-act-overlay .act-overlay-main .act-main-content{
    width:94%;
    height: 100%;
    overflow-y: scroll;
    margin:0 auto;
    padding-bottom:30rpx;
  }
  .mui-act-overlay .act-main-content .main-content-title{
      font-size: 32rpx;
      line-height: 80rpx;
  }
  .mui-act-overlay .act-overlay-close::after{
    content:'\e64d';
  }

/* pages/orderlist/orderlist.wxss */
.weui-search-bar{
    background: none;
    border: 0 none;
}

.wrap-order-nav{
    width: 90%;
    background: #FFFFFF;
    display: flex;
    justify-content: space-between ;
    align-items: center;
    margin:0 auto;
    padding:0 5%;
}
.wrap-order-nav .order-nav-item{
    font-size: 28rpx;
    padding: 16rpx;
    position: relative;
}
.order-nav-item{
    flex: 1;
    text-align: center;
}
.wrap-order-nav .active{
    color: #e94f4f;
}
.wrap-order-nav .active::after{
    width: 100%;
    height: 2rpx;
    background: #e94f4f;
    position: absolute;
    bottom: 2rpx;
    left: 50%;
    content: "";
    margin-left: -50%;
}
.wrap-order-list,.order-list-item{
    width: 96%;
    margin:10rpx auto;
}
.order-list-item{
    width:100%;
    margin: 10rpx 0;
    background: #fff;
    border-radius: 20rpx;
    padding-bottom: 20rpx;
}
.item-head-shop{
    display: flex;
    justify-content: start ;
    align-items: center;
}
.list-item-head,.list-item-body{
    display: flex;
    justify-content: space-between ;
    align-items: center;
}
.list-item-head{
    border-radius: 20rpx 20rpx 0 0;
    background: #FFFFFF;
}
.list-item-head .head-shop-logo{
    width: 60rpx;
    height: 60rpx;
    margin:16rpx 20rpx;
    background: #CCC;
    border-radius: 50%;
}
.list-item-head .head-shop-name{
    font-size: 28rpx;
}
.list-item-head .head-shop-icon{
    font-size: 28rpx;
    color: #BCBCBC;
}
.list-item-head .head-shop-icon::after{
    content: '\e6ba'
}
.list-item-status{
    font-size: 24rpx;
    color: #e64340;
    margin-right: 20rpx;
}
.list-item-body{
    padding: 10rpx 20rpx;
}
.item-body-img{
    width: 200rpx;
    height: 200rpx;
    background: #CCC;
    margin-right: 16rpx;
}
.item-body-box{
    width: 70%;
    overflow: hidden;
    align-self:flex-start;
    height: 200rpx;
    position: relative;
}
.body-box-top{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.item-body-text{
    align-self:flex-start;
    width: 70%;
}
.body-text-title{
    line-height: 32rpx;
}
.body-text-title,.body-price-money{
    font-size: 28rpx;
}
.body-text-des,.body-price-num{
    font-size: 24rpx;
    color: #888888;
}
.item-body-price{
    width: 30%;
    text-align: right;
    align-self:flex-start;
    text-align: right;
}

.list-item-sum{
    background: #ffffff;
    font-size: 28rpx;
    text-align: right;
    position: absolute;
    right: 0;
    bottom: 0;
    /* display: flex;
    justify-content: space-between;
    align-items: center; */
    width: 100%;
}
.item-sum-isold{
    font-size: 24rpx;
    color: #00d819;
    border: #00d819 2rpx solid;
    margin-right: 10rpx;
    border-radius: 10rpx;
    padding: 4rpx 8rpx;
}
.list-item-footer{
    background: #ffffff;
    text-align: right;
    padding:10rpx  20rpx;
    border-top:#e5e5e5 2rpx solid;
}
.list-item-footer .button-default{
    display: inline-block;
    margin-left: 15rpx;
}

.details-list-title {
    display: block;
    width: 95%;
    font-size: 32rpx;
    margin: 10rpx auto;

}
.details-seller .act-overlay-main {
    /* overflow-y: scroll; */
    height: 91%;
}
.wrap-order .details-seller {
    width: 96%;
    /* height: 120rpx; */
   
    /* margin: 20rpx auto; */
    padding: 10rpx 2%;
    background: #fff;
    margin:10rpx auto;
    
}
.details-seller .details-seller-title {
    width: 95%;
    overflow: hidden;
    margin: 20rpx auto;
    display: flex;
    font-size: 28rpx;
}

.details-seller .details-seller-title .seller-title-pic {
    width: 120rpx;
    height: 120rpx;
    background: #828282;
    border-radius: 10rpx;
}

.details-seller .details-seller-title .seller-title-info {
    text-indent: 20rpx;
    /* padding-top: 14rpx; */
}
.details-seller .details-seller-title .title-info-price{
    font-size: 32rpx;
    line-height: 42rpx;
}
.details-seller .details-seller-list {
    width: 97%;
    height: 90rpx;
    line-height: 90rpx;
    overflow: hidden;
    display: flex;
    margin: 10rpx auto;
    font-size: 28rpx;
    border-bottom: 1rpx solid #e5e5e5;
    padding-bottom: 10rpx;
}

.details-seller .details-seller-list .seller-list-pic {
    width: 90rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 60rpx;
    /* background: #828282; */
    color: #828282;
    margin-right: 20rpx;
    text-align: center;
    border: 1rpx solid #e5e5e5;
    border-radius: 5rpx;
}

.details-seller .details-seller-list .seller-list-house::after {
    content: '\e60e'
}

.details-seller .details-seller-list .seller-list-timer::after {
    content: '\e66e'
}

.details-seller .details-seller-list .seller-list-type-number::after {
    content: '\e648'
}

.details-seller .details-seller-list .seller-list-order::after {
    content: '\e601'
}

.details-seller .details-seller-list .seller-list-neighbour::after {
    content: '\e609'
}

.details-seller .details-seller-list .seller-list-card::after {
    content: '\e674'
}

.details-seller .details-seller-list .seller-list-iphone::after {
    content: '\e638'
}




.details-seller .details-seller-list .list-item-address {
    display: inline-block;
    /* height: 40rpx; */
    line-height: 40rpx;
    padding: 0 20rpx;
    background: #FE6901;
    margin: 25rpx 10rpx;
    border-radius: 5rpx;
    color:#fff;
}

.details-seller .details-seller-list .seller-list-item {
    flex: 1;
}

.details-seller .details-seller-list .list-item-type {
    display: flex;
    line-height: 50rpx;
}

.details-seller .details-seller-list .list-item-status {
    padding: 0 10rpx;
    color: #ccc;
    border: 1rpx solid #e5e5e5;
    border-radius: 10rpx;
    /* line-height: 20rpx; */
    font-size: 20rpx;
    margin-left: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 10rpx;
}

.details-seller .seller-list-auth .list-item-type {
    line-height: 90rpx;
}

.details-seller .seller-list-auth .seller-auth-photo {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
    border-radius: 50rpx;
    margin: 24rpx 5rpx 5rpx 5rpx;

}

.details-seller .details-seller-list .status-true {
    color: #00d819;
    border-color: #00d819
}

.details-seller .details-seller-list .list-item-desc {
    line-height: 50rpx;
    color: #828282
}

.list-empty{
  
    position: relative;
  }
  .list-empty::after{
    content : '\e639';
    font-size: 100px;
    margin:0 auto;
    position: absolute;
    left:50%;
    top:0rpx;
    transform: translateX(-50%);
    color: #e5e5e5;
  }
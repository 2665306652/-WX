/* pages/village/village.wxss */
.mui-village{
    width:100%;
    overflow: hidden;
    background: #fff;
    border-top:1rpx solid #e5e5e5;
}

.address-main .list-items .item-photo{
    width:50rpx;
    height:50rpx;
    line-height: 50rpx;
    border-radius: 100rpx;
    background: #353535;
    color:#fff;
    text-align: center;
    margin-top:24rpx;
    position: relative;
    margin-left:20rpx;

}
.address-main .list-items .item-address{
    width:500rpx;
    margin:0 20rpx;
}
.address-main .list-items .address-info{
    display: flex;
    line-height: 45rpx;

    
}
.address-main .address-info .info-name{
    font-size: 32rpx;
}
.address-main .address-info .info-phone{
    font-size: 28rpx;
    color:#888;
    padding-left:30rpx;
}
.address-main .item-address .address-details{
    line-height: 40rpx;
    font-size: 28rpx;
}
.address-main .item-address .details-isDef{
    display: inline-block;
    padding:0 10rpx;
    background:#FE6901;
    font-size: 24rpx;
    color:#fff;
    margin-right: 10rpx;
    border-radius: 5rpx;
    line-height: 30rpx;
}
.address-main .list-items .item-del,.address-main .list-items .item-edit{
    height: 50rpx;
    line-height: 50rpx;
    color: #888;
    text-align: center;
    border-left: 1rpx solid #e5e5e5;
    padding-left:20rpx;
    margin-top:30rpx;
    text-align: center;
    font-size: 28rpx;
}

.address-main{
    padding-left:30rpx;
}
.address-main .list-items{
    display: flex;
    margin:20rpx 0;
    padding:10rpx 0;
    position: relative;

}
.address-main .list-items:last-child{
    border-bottom:none;
}
.address-main .list-items .item-left{
    width:1rpx;
    height:128rpx;
    background: #e5e5e5;
    position: absolute;
    left:0;top:0;
}
.address-main .list-items:last-child .item-left{
    height:60rpx;
}
.address-main .list-items .item-photo::before{
    /* content:'1';
    width:19rpx;
    height:2rpx;
    background: #e5e5e5;
    position: absolute;
    left:-19rpx;
    top:50%; */
}
.address-main .item-del::after{
    content : '\e7fc';
    color:#e94f4f;
}
.address-main .list-add{
    height:100rpx;
    line-height: 100rpx;
}
.address-main .list-add .item-photo{
    background: #e94f4f;
    line-height: 47rpx;
}
.address-main .list-add .add-item{
    font-size:30rpx;
    padding-left:20rpx;
}
/*收货地址编辑弹层*/
.userInfo-address .editAddress-list{
    width:90%;
    overflow: hidden;
    margin:20rpx auto;
}
.userInfo-address .editAddress-list .list-title{
    font-size: 32rpx;
    margin-bottom: 30rpx;
}
.editAddress-list .list-item{
    width:100%;
    margin:20rpx auto;
    font-size:28rpx;
    display: flex;
    border-bottom:1rpx solid #e5e5e5;
    line-height: 45rpx;
    padding:0;
    padding-bottom:20rpx;
}
.editAddress-list .list-item::before{
    border-top:none;
}
.editAddress-list .list-item .item-title{
    line-height: 60rpx;
    /* color: #888; */
}
.editAddress-list .list-item input{
    height: 45rpx;
    line-height: 45rpx;
    color: #353535;
}
.editAddress-list .list-item .item-red{
    color:#e94f4f
}
.editAddress-list .item-main{
    display: flex;
    line-height: 60rpx;
}
.editAddress-list .item-main .main-item{
    margin:0 10rpx;
}
.editAddress-list .item-main .main-detaile{
    display: block;
}
.editAddress-list .list-item .item-del{
    color:#e94f4f;
}

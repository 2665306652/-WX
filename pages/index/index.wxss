/**index.wxss**/
@import '../../app.wxss';

.act-banner{
  width:100%;
  height: 283rpx;
  background: #ccc;
  overflow: hidden;
}
.act-banner .banner-pic{
    display: block;
    width:100%;
    height: 100%;
}

.act-nav{
  width:96%;
  /* height: 80rpx; */
  line-height: 80rpx;
  margin:10px auto 0 auto;
  display: flex;
  background: #fff;
  /* text-indent: 5rpx; */
  font-size: 30rpx;
  color:#ccc;
  padding:0 2%;
}
.act-nav .nav-item{
  flex:1;
  /* padding-left:5rpx; */
  /* padding-right:5rpx; */
  text-align: center;
}
.act-nav .item-active{
  color:#e94f4f;
  border-bottom:2rpx solid #e94f4f;
}

.act-swiper-item{
  width:100%;
  height:100%;
  overflow: hidden;
}
.act-swiper{
  padding-bottom:20rpx;
  overflow: hidden;
}
.swiper-item{
  padding-bottom:10px;
}
.act-list{
  /* width:calc(100% - 40rpx); */
  width:100%;
  margin-top:20rpx;
  padding-bottom:20rpx;
  /* padding:0 20rpx; */
}

.act-list .list-item{
  width:calc(100% - 80rpx);
  /* width:100%; */
  height: 300rpx;
  overflow: hidden;
  background-color: #fff;
  margin:10rpx auto;
  display: flex;
  font-size: 32rpx;
  padding:20rpx;
  border-radius: 10rpx;
}
.act-list .list-item .item-pic{
  width:300rpx;
  height: 300rpx;
  background: #ccc;
}
.act-list .list-item .item-info{
  flex:1;
  padding-left:20rpx;
}
.act-list .list-item .info-title{
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;

}
.act-list .item-info .info-seller{
  width:100%;
  overflow: hidden;
  font-size: 28rpx;
  color: #888888;
  /* color:#FE6901; */
  display: flex;
  line-height: 38rpx;
}
.act-list .item-info .seller-name{
  padding-right:10rpx;
}
.act-list .item-info .info-price{
  font-size: 36rpx;
  color: #e94f4f;
  margin:25rpx auto;
  /* margin-top:40rpx; */
}
.act-list .item-info .price-unit{
  display: inline;
  font-size: 20rpx;
}
.act-list .item-info .info-trust{
  /* height: 30rpx; */
  height: 45rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  /* color:#00d819; */
  color:#FE6901;
  display: flex;
  /* overflow: hidden; */
}
.act-list .item-info .trust-number{
  flex: 1;
  /* line-height: 60rpx; */
}
.act-list .item-info .details-seller-link{
  /* width: 120rpx; */
  height: 45rpx;
  line-height: 45rpx;
  /* border:1px #ce4031 solid; */
  /* border: 1px #e5e5e5 solid; */
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  margin: 0 0 0 20rpx;
  padding:0 20rpx;
  overflow: hidden;
  background: #e94f4f;
  /* transform: translateY(-10rpx) */
}


.act-list .item-info .trust-auth{
  color:#ccc;
}
.act-list .item-info .auth{
  color:#00d819;
}

.act-list .item-info .trust-auth::after{
  content: '\e674'
}

.list-empty{
  
  position: relative;
}
.list-empty::after{
  content : '\e639';
  font-size: 100px;
  margin:0 auto;
  position: absolute;
  left:50%;
  top:0rpx;
  transform: translateX(-50%);
  color: #e5e5e5;
}





.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
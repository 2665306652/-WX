/* pages/orderDetails/orderDetails.wxss */
.wrap-detail{
    width: 100%;
}
.wrap-detail-head{
    width: 100%;
    height: 200rpx;
    background: #961515;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.wrap-detail-head .detail-head-text{
    color: #ffffff;
    font-size: 30rpx;
    padding-left: 50rpx;
}
.wrap-detail-head  .detail-head-img{
    width: 100rpx;
    height: 100rpx;
    text-align: right;
    margin-right: 50rpx;
    font-size: 100rpx;
    color: #ffffff;
    line-height: 100rpx;
}
.detail-head-cancle::after{
    content:'\e6cc'
}
.detail-head-pay::after{
    content: '\e656'
}
.detail-head-send::after{
    content: '\e625'
}
.detail-head-suc::after{
    content: '\e613'
}

.wrap-detail-addr{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: #ffffff;  
    padding: 20rpx 0; 
}
.detail-addr-gps{
    color: #961515;
    font-size: 26rpx;
    padding:0 24px;
}
.detail-addr-gps::after{
    content: '\e611'
}
.send::after{
    content: '\e625'
}
.detail-addr-con{
    font-size: 24rpx;
    color: #333;
}

.wrap-order-list,.order-list-item{
    width: 100%;
}
.order-list-item{
    margin: 10rpx 0;
}
.item-head-shop{
    display: flex;
    justify-content: start ;
    align-items: center;
}
.list-item-head,.list-item-body{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
}
.list-item-head{
    background: #FFFFFF;
}
.list-item-head .head-shop-logo{
    width: 60rpx;
    height: 60rpx;
    margin:16rpx 20rpx;
    background: #CCC;
    border-radius: 50%;
}
.list-item-head .head-shop-name{
    font-size: 28rpx;
}
.list-item-head .head-shop-icon{
    font-size: 28rpx;
    color: #BCBCBC;
}
.list-item-head .head-shop-icon::after{
    content: '\e6ba'
}
.list-item-status{
    font-size: 24rpx;
    color: #e64340;
    margin-right: 20rpx;
}
.list-item-body{
    padding: 10rpx 20rpx;
}
.item-body-img{
    width: 200rpx;
    height: 200rpx;
    background: #CCC;
    margin-right: 16rpx;
}
.item-body-text{
    width: 54%;
    align-self:flex-start;
}
.body-text-title,.body-price-money{
    font-size: 28rpx;
}
.body-text-des,.body-price-num{
    font-size: 22rpx;
    color: #888888;
}
.item-body-price{
    /* width: 10%; */
    text-align: right;
}

.list-item-sum{
    background: #ffffff;
    font-size: 28rpx;
    text-align: right;
    padding: 16rpx;
    /* border-bottom: 1rpx #BCBCBC solid; */
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.list-item-sum .item-sum-num{
    color: #e94f4f;
}
.order-list-info{
    width: 100%;
    margin-top: 10rpx;
    background: #ffffff;
    padding:10rpx 26rpx;

}
.list-info-num{
    font-size: 28rpx;
    color: #888888;
    line-height: 32rpx;
    margin-top: 10rpx;
}
.order-list-btns{
    width: 96%;
    background: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 1% 2%;
    border-bottom: #e5e5e5 1rpx solid;
    text-align: right;
}
.order-list-btns .button-default{
    display: inline-block;
}
